<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/graph_auth"
    app:startDestination="@id/start">

    <fragment
        android:id="@+id/start"
        android:name="wtf.liempo.safebay.auth.ui.AuthStartFragment"
        android:label="StartFragment"
        tools:layout="@layout/fragment_auth_start"/>

    <fragment
        android:id="@+id/login"
        android:name="wtf.liempo.safebay.auth.ui.AuthLoginFragment"
        android:label="LoginFragment"
        tools:layout="@layout/fragment_auth_login"/>

    <activity
        android:id="@+id/home"
        android:name="wtf.liempo.safebay.home.ui.HomeActivity"
        android:label="HomeActivity"
        tools:layout="@layout/activity_home" >
    </activity>

    <fragment
        android:id="@+id/profile"
        android:name="wtf.liempo.safebay.auth.ui.AuthProfileFragment"
        android:label="AuthProfileFragment"
        tools:layout="@layout/fragment_auth_profile" />

    <action
        android:id="@+id/to_login"
        app:destination="@id/login"
        app:launchSingleTop="true"
        app:popUpTo="@id/graph_auth"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/to_profile"
        app:destination="@id/profile"
        app:launchSingleTop="true"
        app:popUpTo="@id/graph_auth"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/to_start"
        app:destination="@id/start"
        app:launchSingleTop="true"
        app:popUpTo="@id/graph_auth"
        app:popUpToInclusive="true" />

    <action
        android:id="@+id/to_home"
        app:destination="@id/home"
        app:launchSingleTop="true" >
    </action>

</navigation>
