<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeCodeFragment">

    <ImageView
        android:id="@+id/image_qr"
        android:layout_width="256dp"
        android:layout_height="256dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/backgrounds/scenic"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/text_qr"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:text="@string/msg_qr"
        android:textAlignment="center"
        android:labelFor="@id/image_qr"
        app:layout_constraintBottom_toTopOf="@+id/image_qr"
        app:layout_constraintEnd_toEndOf="@+id/image_qr"
        app:layout_constraintStart_toStartOf="@+id/image_qr" />

    <Button
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:id="@+id/button_save_qr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/action_save"
        app:layout_constraintEnd_toEndOf="@+id/image_qr"
        app:layout_constraintStart_toStartOf="@+id/image_qr"
        app:layout_constraintTop_toBottomOf="@+id/image_qr" />

</androidx.constraintlayout.widget.ConstraintLayout>
